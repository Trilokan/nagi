<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data  noupdate="0">

       <record model="ir.module.category" id="module_time">
           <field name="name">Time Management</field>
           <field name="description">Hospital Employee</field>
           <field name="sequence">4</field>
       </record>

       <record id="group_time_admin" model="res.groups">
            <field name="name">Time Management - Administrator</field>
            <field name="category_id" ref="module_time"/>
       </record>

       <record id="group_time_hr" model="res.groups">
            <field name="name">Time Management - HR</field>
            <field name="category_id" ref="module_time"/>
       </record>

       <record id="group_time_user" model="res.groups">
            <field name="name">Time Management - User</field>
            <field name="category_id" ref="module_time"/>
       </record>

       <!--Time Configuration-->
        <record id="time_configuration_rule" model="ir.rule">
            <field name="name">Time Configuration</field>
            <field name="model_id" ref="nagi.model_time_configuration"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"
            eval="[(6, None, [ref('nagi.group_time_admin'),
                              ref('nagi.group_time_hr')])]"/>
        </record>


   </data>
</odoo>