<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_schedule_type_tree" model="ir.ui.view">
        <field name="name">hos.schedule.type.tree</field>
        <field name="model">hos.schedule.type</field>
        <field name="arch" type="xml">
            <tree string="Schedule Reason">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_schedule_type_form" model="ir.ui.view">
        <field name="name">hos.schedule.type.form</field>
        <field name="model">hos.schedule.type</field>
        <field name="arch" type="xml">
            <form string="Schedule Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hos_schedule_type" model="ir.actions.act_window">
        <field name="name">Schedule Reason</field>
        <field name="res_model">hos.schedule.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
