<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_stock_picking_material_receipt_tree" model="ir.ui.view">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <tree string="Material Receipt" create="false" delete="false">
                <field name="date"/>
                <field name="name"/>
                <field name="reference"/>
                <field name="picking_type"/>
                <field name="name"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_stock_picking_material_receipt_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <form string="Material Receipt" create="false" delete="false">
                <sheet>
                    <div id="s_header">
                        <h1>Material Receipt</h1>
                    </div>
                    <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    <h2><field name="name" readonly="1"/></h2>
                    <group col="4">
                        <field name="date" readonly="1"/>
                        <field name="person_id" readonly="1"/>
                        <field name="reference" readonly="1"/>
                        <field name="picking_type" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Material Detail">
                            <field name="picking_detail" attrs="{'readonly': [('progress', '!=', 'draft')]}">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="id" invisible="1"/>
                                    <field name="name" string="Description" readonly="1"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="unit_price" readonly="1"/>
                                    <field name="requested_quantity" readonly="1"/>
                                    <field name="quantity" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                                    <field name="discount" readonly="1"/>
                                    <field name="tax_id" readonly="1"/>
                                    <field name="freight" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                                    <field name="total_amount" readonly="1"/>
                                    <field name="cgst" invisible="1"/>
                                    <field name="sgst" invisible="1"/>
                                    <field name="igst" invisible="1"/>
                                    <field name="tax_amount" invisible="1"/>
                                    <field name="discount_amount" invisible="1"/>
                                    <field name="freight_amount" invisible="1"/>
                                    <field name="discounted_amount" invisible="1"/>
                                    <field name="untaxed_amount" invisible="1"/>
                                    <field name="taxed_amount" invisible="1"/>
                                    <field name="progress" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
					<div style="float: left; width: 100%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<thead>
								<tr>
									<th>sgst</th>
									<th>cgst</th>
									<th>igst</th>
								</tr>
							</thead>
							<tfoot>
								<tr><td></td><td></td><td></td></tr>
							</tfoot>
							<tbody>
								<tr>
									<td><field name="sgst" nolabel="1"/></td>
									<td><field name="cgst" nolabel="1"/></td>
									<td><field name="igst" nolabel="1"/></td>
								</tr>
								<tr>
									<th>Freight Charges</th>
									<td><field name="freight_amount" nolabel="1"/></td>
								</tr>

							</tbody>
						</table>

						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Taxed Amount</th>
								<td><field name="taxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Un Taxed Amount</th>
								<td><field name="untaxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discount Amount</th>
								<td><field name="discount_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discounted Amount</th>
								<td><field name="discounted_amount" nolabel="1"/></td>
							</tr>

						</table>
					</div>

					<div style="float: right; width: 50%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Tax Amount</th>
								<td><field name="tax_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Round-Off</th>
								<td><field name="round_off_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Gross Amount</th>
								<td><field name="gross_amount" nolabel="1"/></td>
							</tr>

						</table>
					</div>
					</group>
                    <footer>
                        <button name="trigger_move" string="Move" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="total_calculation" string="Update" type="object"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action GRN-->
    <record id="action_stock_picking_material_receipt" model="ir.actions.act_window">
        <field name="name">Material Receipt</field>
        <field name="res_model">stock.picking</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('picking_type', '=', 'in')]</field>
        <field name="view_id" ref="view_stock_picking_material_receipt_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_stock_picking_material_receipt_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_picking_material_receipt_form" />
        <field name="act_window_id" ref="action_stock_picking_material_receipt"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_stock_picking_material_receipt_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_stock_picking_material_receipt_tree"/>
        <field name="act_window_id" ref="action_stock_picking_material_receipt"/>
    </record>

</odoo>

