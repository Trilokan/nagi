<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_stock_picking_store_issue_tree" model="ir.ui.view">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <tree string="Store Issue">
                <field name="date"/>
                <field name="name"/>
                <field name="reference"/>
                <field name="picking_type"/>
                <field name="name"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_stock_picking_store_issue_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <form string="Store Issue">
                <sheet>
                    <div id="s_header">
                        <h1>Store Issue</h1>
                    </div>
                    <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    <h2><field name="name" readonly="1"/></h2>
                    <group col="4">
                        <field name="date" readonly="1"/>
                        <field name="reference" readonly="1"/>
                        <field name="picking_type" readonly="1"/>
                        <field name="source_location_id" readonly="1"/>
                        <field name="destination_location_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Issue Detail">
                            <field name="picking_detail"
                                   context="{'source_location_id': source_location_id,
                                             'destination_location_id': destination_location_id,
                                             'picking_type': picking_type,
                                             'date': date}"
                                   attrs="{'readonly': [('progress', '=', 'moved')]}">
                                <tree editable="bottom">
                                    <field name="id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="requested_quantity"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" invisible="1"/>
                                    <field name="source_location_id" invisible="1"/>
                                    <field name="destination_location_id" invisible="1"/>
                                    <field name="picking_type" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="trigger_adjust" string="Adjust" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Stock Adjustment-->
    <record id="action_stock_picking_store_issue" model="ir.actions.act_window">
        <field name="name">Store Issue</field>
        <field name="res_model">stock.picking</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('picking_type', '=', 'internal')]</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_stock_picking_store_issue_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_picking_store_issue_form" />
        <field name="act_window_id" ref="action_stock_picking_store_issue"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_stock_picking_store_issue_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_stock_picking_store_issue_tree"/>
        <field name="act_window_id" ref="action_stock_picking_store_issue"/>
    </record>


</odoo>

