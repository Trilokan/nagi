<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_purchase_order_tree" model="ir.ui.view">
        <field name="name">purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <tree string="Purchase Order">
                <field name="date"/>
                <field name="name"/>
                <field name="indent_id"/>
                <field name="quote_id"/>
                <field name="progress"/>
            </tree>
        </field>    
    </record>

    <!-- Form -->
    <record id="view_purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <form string="Purchase Order">
                <sheet>
                    <div id="s_header">
                        <h1>Purchase Order</h1>
                    </div>
                    <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    <h2><field name="name"/></h2>
                    <group col="4">
                        <field name="date"/>
                        <field name="indent_id"/>
                        <field name="quote_id"/>
                        <field name="vendor_id"/>
                        <field name="vendor_ref" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                    </group>
                    <notebook>
                        <page string="Order Detail">
                            <field name="order_detail" attrs="{'readonly': [('progress', '!=', 'draft')]}">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="product_id"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="requested_quantity"/>
                                    <field name="accepted_quantity"/>
                                    <field name="unit_price"/>
                                    <field name="discount"/>
                                    <field name="tax_id"/>
                                    <field name="total_amount"/>
                                    <field name="quote_detail_id" invisible="1"/>
                                    <field name="progress" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
					<div style="float: left; width: 100%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<thead>
								<tr>
									<th>sgst</th>
									<th>cgst</th>
									<th>igst</th>
								</tr>
							</thead>
							<tfoot>
								<tr><td></td><td></td><td></td></tr>
							</tfoot>
							<tbody>
								<tr>
									<td><field name="sgst" nolabel="1"/></td>
									<td><field name="cgst" nolabel="1"/></td>
									<td><field name="igst" nolabel="1"/></td>
								</tr>
							</tbody>
						</table>

						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Taxed Amount</th>
								<td><field name="taxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Un Taxed Amount</th>
								<td><field name="untaxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discount Amount</th>
								<td><field name="discount_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discounted Amount</th>
								<td><field name="discounted_amount" nolabel="1"/></td>
							</tr>
						</table>
					</div>

					<div style="float: right; width: 50%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Tax Amount</th>
								<td><field name="tax_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Gross Amount</th>
								<td><field name="gross_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Round-Off</th>
								<td><field name="round_off_amount" nolabel="1"/></td>
							</tr>
						</table>
					</div>
					</group>
                    <footer>
                        <button name="total_calculation" string="Total Calculation" type="object"/>
                        <button name="trigger_cancel" string="Cancel" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_po_approve" string="PO Approve" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                    </footer>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_purchase_order" model="ir.actions.act_window">
        <field name="name">Purchase Order</field>
        <field name="res_model">purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
