<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_leave_voucher_tree" model="ir.ui.view">
        <field name="name">leave.voucher.tree</field>
        <field name="model">leave.voucher</field>
        <field name="arch" type="xml">
            <tree string="Leave Voucher">
                <field name="date"/>
                <field name="person_id"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_leave_voucher_form" model="ir.ui.view">
        <field name="name">leave.voucher.form</field>
        <field name="model">leave.voucher</field>
        <field name="arch" type="xml">
            <form string="Leave Journal">
                <sheet>
                    <div id="s_header">
                        <h1>Leave Voucher</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <group col="4">
                        <field name="date"/>
                        <field name="person_id"/>
                        <field name="company_id"/>
                        <field name="count"/>
                        <field name="difference"/>
                    </group>
                    <field name="credit_lines">
                        <tree>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="person_id"/>
                            <field name="description"/>
                            <field name="credit"/>
                            <field name="reconcile"/>
                            <field name="leave_reconcile"/>
                            <field name="difference"/>
                        </tree>
                    </field>
                    <field name="debit_lines">
                        <tree>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="person_id"/>
                            <field name="description"/>
                            <field name="debit"/>
                            <field name="reconcile"/>
                            <field name="leave_reconcile"/>
                            <field name="difference"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_leave_voucher" model="ir.actions.act_window">
        <field name="name">Leave Voucher</field>
        <field name="res_model">leave.voucher</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
