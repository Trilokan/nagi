<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_opt_prescription_tree" model="ir.ui.view">
        <field name="name">patient.treatment.tree</field>
        <field name="model">patient.treatment</field>
        <field name="arch" type="xml">
            <tree string="Prescription">
                <field name="date"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_opt_prescription_form" model="ir.ui.view">
        <field name="name">patient.treatment.form</field>
        <field name="model">patient.treatment</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <div id="s_header">
                        <h1>Prescription</h1>
                    </div>
                    <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    <field name="name"/>
                    <group col="4">
                        <field name="date" readonly="1"/>
                        <field name="patient_id" string="Patient" readonly="1"/>
                        <field name="age" readonly="1"/>
                        <field name="email" readonly="1"/>
                        <field name="mobile" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Prescription Detail">
                            <field name="opt_prescription_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="morning"/>
                                    <field name="noon"/>
                                    <field name="evening"/>
                                    <field name="days"/>
                                    <field name="treatment_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_opt_prescription" model="ir.actions.act_window">
        <field name="name">Prescription</field>
        <field name="res_model">patient.treatment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
