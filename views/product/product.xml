<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_product_tree" model="ir.ui.view">
        <field name="name">hos.product.tree</field>
        <field name="model">hos.product</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_product_form" model="ir.ui.view">
        <field name="name">hos.product.form</field>
        <field name="model">hos.product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <header>
                    <field name="progress" widget="statusbar" attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                </header>
                <sheet>
                    <separator string="Product" style="text-align:center;"/>
                    <h2><field name="code"/></h2>
                    <group col="4">
                        <field name="name" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="product_type" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="group_id"
                               attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="sub_group_id"
                               domain="[('group_id', '=', group_id)]"
                               attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="uom_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                    </group>
                    <notebook>
                        <page string="Inventory">
                            <group>
                                <field name="min_stock" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                                <field name="max_stock" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                            </group>
                            <field name="warehouse_ids">
                                <tree>
                                    <field name="location_id"/>
                                    <field name="quantity"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hos_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">hos.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
