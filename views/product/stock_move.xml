<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_stock_move_tree" model="ir.ui.view">
        <field name="name">stock.move.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <tree string="Stock Move">
                <field name="date"/>
                <field name="name"/>
                <field name="reference"/>
                <field name="picking_id"/>
                <field name="picking_type"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="source_location_id"/>
                <field name="destination_location_id"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_stock_move_form" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <form string="Stock Move">
                <header>
                    <button name="trigger_move" string="Move" type="object"/>
                    <field name="progress" widget="statusbar"/>
                </header>
                <sheet>
                    <separator string="Stock Move" style="text-align:center;"/>
                    <group col="4">
                        <field name="date"/>
                        <field name="name"/>
                        <field name="reference"/>
                        <field name="picking_id"/>
                        <field name="picking_type"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="source_location_id"/>
                        <field name="destination_location_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_stock_move" model="ir.actions.act_window">
        <field name="name">Stock Move</field>
        <field name="res_model">stock.move</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
