<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_person_tree" model="ir.ui.view">
        <field name="name">hos.person.tree</field>
        <field name="model">hos.person</field>
        <field name="arch" type="xml">
            <tree string="Person Detail">
                <field name="date"/>
                <field name="name"/>
                <field name="partner_uid"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_person_form" model="ir.ui.view">
        <field name="name">hos.person.form</field>
        <field name="model">hos.person</field>
        <field name="arch" type="xml">
            <form string="Person Detail">
                <sheet>
                    <div>
                        <field name="image" widget="image" class="oe_avatar oe_left" modifiers="{}"/>
                    </div>
                    <div class="oe_right oe_button_box" name="button_box">
                        <field name="date"/>
                    </div>
                    <div style="margin-left: 100px;">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" modifiers="{'required': true}"/>
                            </h1>
                            <h2><field name="partner_uid"/></h2>
                        </div>
                    </div>
                    <notebook>
                        <page string="Person Detail">
                            <group col="4">
                                <field name="gst_no"/>
                                <field name="license_no"/>
                                <field name="tin_no"/>
                                <field name="pan_no"/>
                                <field name="contact_person"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="alternate_contact"/>
                            </group>
                        </page>
                        <page string="Filter Details">
                            <group>
                                <field name="is_company"/>
                                <field name="is_user"/>
                                <field name="is_employee"/>
                                <field name="is_supplier"/>
                                <field name="is_patient"/>
                                <field name="is_service"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hos_person" model="ir.actions.act_window">
        <field name="name">Partner Detail</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action Employee -->
    <record id="action_hos_person_employee" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_employee', '=', True)]</field>
    </record>

    <!-- Action Patient -->
    <record id="action_hos_person_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_patient', '=', True)]</field>
    </record>

    <!-- Action supplier -->
    <record id="action_hos_person_supplier" model="ir.actions.act_window">
        <field name="name">Supplier</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_supplier', '=', True)]</field>
    </record>

    <!-- Action Service -->
    <record id="action_hos_person_service" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_service', '=', True)]</field>
    </record>

    <!-- Action User -->
    <record id="action_hos_person_users" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_user', '=', True)]</field>
    </record>

    <!-- Action Company -->
    <record id="action_hos_person_company" model="ir.actions.act_window">
        <field name="name">Company</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_company', '=', True)]</field>
    </record>

</odoo>
